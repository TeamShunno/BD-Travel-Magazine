<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="team.shunno.bdtm.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:drawableLeft="@drawable/ic_menu_gallery"
                android:gravity="center|left"
                android:text="Trading places..."
                android:textSize="16sp" />

            <!-- Starts here -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/div_1_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Title"
                    android:textSize="31sp" />

                <ImageButton
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_toRightOf="@+id/div_1_title"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_more_vert_black_24dp" />

            </LinearLayout>


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_horizontal_margin">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/dev_1_img_1"
                        android:layout_width="250dp"
                        android:layout_height="150dp"
                        android:src="@drawable/ic_menu_gallery" />

                    <ImageView
                        android:id="@+id/dev_1_img_2"
                        android:layout_width="250dp"
                        android:layout_height="150dp"
                        android:src="@drawable/ic_menu_gallery" />

                    <ImageView
                        android:id="@+id/dev_1_img_3"
                        android:layout_width="250dp"
                        android:layout_height="150dp"
                        android:src="@drawable/ic_menu_gallery" />

                    <ImageView
                        android:id="@+id/dev_1_img_4"
                        android:layout_width="250dp"
                        android:layout_height="150dp"
                        android:src="@drawable/ic_menu_gallery" />

                    <ImageView
                        android:id="@+id/dev_1_img_5"
                        android:layout_width="250dp"
                        android:layout_height="150dp"
                        android:src="@drawable/ic_menu_gallery" />
                </LinearLayout>

            </HorizontalScrollView>


            <!-- New start here -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/div_2_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Title"
                    android:textSize="31sp" />

                <ImageButton
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_toRightOf="@+id/div_1_title"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_more_vert_black_24dp" />

            </LinearLayout>


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_horizontal_margin">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/dev_2_img_1"
                        android:layout_width="250dp"
                        android:layout_height="150dp"
                        android:src="@drawable/ic_menu_gallery" />

                    <ImageView
                        android:id="@+id/dev_2_img_2"
                        android:layout_width="250dp"
                        android:layout_height="150dp"
                        android:src="@drawable/ic_menu_gallery" />

                    <ImageView
                        android:id="@+id/dev_2_img_3"
                        android:layout_width="250dp"
                        android:layout_height="150dp"
                        android:src="@drawable/ic_menu_gallery" />

                    <ImageView
                        android:id="@+id/dev_2_img_4"
                        android:layout_width="250dp"
                        android:layout_height="150dp"
                        android:src="@drawable/ic_menu_gallery" />

                    <ImageView
                        android:id="@+id/dev_2_img_5"
                        android:layout_width="250dp"
                        android:layout_height="150dp"
                        android:src="@drawable/ic_menu_gallery" />
                </LinearLayout>

            </HorizontalScrollView>


            <!-- New start here -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/div_3_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Title"
                    android:textSize="31sp" />

                <ImageButton
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_toRightOf="@+id/div_1_title"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_more_vert_black_24dp" />

            </LinearLayout>


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/dev_3_img_1"
                        android:layout_width="250dp"
                        android:layout_height="150dp"
                        android:src="@drawable/ic_menu_gallery" />

                    <ImageView
                        android:id="@+id/dev_3_img_2"
                        android:layout_width="250dp"
                        android:layout_height="150dp"
                        android:src="@drawable/ic_menu_gallery" />

                    <ImageView
                        android:id="@+id/dev_3_img_3"
                        android:layout_width="250dp"
                        android:layout_height="150dp"
                        android:src="@drawable/ic_menu_gallery" />

                    <ImageView
                        android:id="@+id/dev_3_img_4"
                        android:layout_width="250dp"
                        android:layout_height="150dp"
                        android:src="@drawable/ic_menu_gallery" />

                    <ImageView
                        android:id="@+id/dev_3_img_5"
                        android:layout_width="250dp"
                        android:layout_height="150dp"
                        android:src="@drawable/ic_menu_gallery" />
                </LinearLayout>

            </HorizontalScrollView>


        </LinearLayout>

    </ScrollView>


</RelativeLayout>
